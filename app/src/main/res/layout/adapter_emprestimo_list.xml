<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/adp_emprestimo_banco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Itau BMG"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/adp_emprestimo_valor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor: "
        android:layout_below="@+id/adp_emprestimo_banco"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/adp_emprestimo_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS 1500,00"
        android:layout_alignBaseline="@+id/adp_emprestimo_valor_label"
        android:layout_toEndOf="@+id/adp_emprestimo_valor_label"/>

    <TextView
        android:id="@+id/adp_emprestimo_qntParcelas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parcelas: "
        android:layout_alignBaseline="@+id/adp_emprestimo_valor_label"
        android:layout_toEndOf="@+id/adp_emprestimo_valor"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/adp_emprestimo_qntParcelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignBaseline="@+id/adp_emprestimo_qntParcelas_label"
        android:layout_toEndOf="@+id/adp_emprestimo_qntParcelas_label"/>

</RelativeLayout>